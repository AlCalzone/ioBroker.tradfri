{
    "compileOnSave": true,
    "compilerOptions": {
        "noEmit": true,
        "noEmitOnError": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "build/",
        "removeComments": false,
        "jsx": "react",

        // enable the new reflection API
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "sourceMap": false,
        "inlineSourceMap": false,
        //"sourceRoot": "src/",
        "target": "es6"
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "build/**",
        "node_modules/**"
    ]
}
