    "@types/jquery": "^1.10.33",
    "@types/mocha": "^2.2.43",
    "@types/node": "^6.0.88",
    "@types/react": "^16.0.10",
    "@types/react-dom": "^16.0.1",
    "@types/reflect-metadata": "0.0.5",
    "@types/sinon": "^2.3.6",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "html-webpack-plugin": "^2.30.1",
    "jquery": "1.11.1",
    "jquery-ui": "1.10.4",
    "jquery-ui-multiselect-widget": "1.17.0",
