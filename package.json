{
  "name": "iobroker.tradfri",
  "version": "2.0.0",
  "description": "ioBroker tradfri Adapter",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.tradfri/issues"
  },
  "contributors": [
    {
      "name": "AlCalzone",
      "email": "d.griesel@gmx.net"
    }
  ],
  "dependencies": {
    "alcalzone-shared": "^1.4.0",
    "iobroker.adapter-core": "^1.0.1",
    "node-tradfri-client": "^1.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jquery": "^3.3.22",
    "@types/materialize-css": "^1.0.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "^6.0.88",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/sinon": "^4.3.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cpx": "^1.5.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "gulp": "^3.9.1",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.3.1",
    "jsdom": "^11.10.0",
    "mocha": "^5.1.1",
    "node-ssh": "^5.1.1",
    "nyc": "^11.7.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "^16.3.2",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "sinon": "^5.0.7",
    "source-map-support": "^0.5.6",
    "ts-loader": "^3.4.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack": "^3.10.0"
  },
  "homepage": "https://github.com/AlCalzone/ioBroker.tradfri",
  "keywords": [
    "ioBroker",
    "tradfri",
    "Smart Home",
    "home automation"
  ],
  "license": "MIT",
  "main": "build/main.js",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.tradfri"
  },
  "scripts": {
    "clean-build-dir": "cpx build/src/**/*.* build && rimraf build/src && rimraf build/{io-,}package.json",
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p src/tsconfig.json",
    "postbuild:ts": "npm run clean-build-dir",
    "build:webpack": "webpack --config webpack.config.js",
    "build": "npm run build:ts && npm run build:webpack",
    "watch:webpack": "webpack --config webpack.config.js --watch --progress",
    "watch": "tsc -p src/tsconfig.json --watch",
    "test:js": "node node_modules/mocha/bin/mocha test/test*.js",
    "test:ts": "node node_modules/mocha/bin/mocha --require ts-node/register --require source-map-support/register src/**/*.test.ts",
    "test:tsx": "node node_modules/mocha/bin/mocha --require test/setupJSDom.js --require ts-node/register --require source-map-support/register **/src/**/*.test.tsx",
    "test:package": "node node_modules/mocha/bin/mocha test/testPackageFiles.js",
    "test": "npm run test:ts && npm run test:tsx && npm run test:js",
    "prepublishOnly": "npm run test:package",
    "coverage": "node node_modules/nyc/bin/nyc npm run test",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "deploy_local": "node --require ts-node/register maintenance/deploy_local.ts",
    "bump": "node --require ts-node/register maintenance/bump_version.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "admin/src/**/*.ts*"
    ],
    "exclude": [
      "src/**/*.test.ts*",
      "admin/src/**/*.test.ts*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
