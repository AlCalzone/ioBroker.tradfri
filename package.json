  "files": [
    "build/",
    "admin/build/",
    "admin/icons/",
    "admin/*.{html,css,js,png}",
    "LICENSE",
    "io-package.json"
  ],
  "dependencies": {
    "@iobroker/adapter-core": "^2.4.0",
    "alcalzone-shared": "^3.0.3",
    "node-tradfri-client": "^2.2.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^1.8.3",
    "@babel/core": "^7.13.14",
    "@iobroker/testing": "^2.4.4",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jquery": "^3.5.5",
    "@types/materialize-css": "^1.0.8",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/sinon": "^9.0.11",
    "axios": "^0.21.1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "cpx": "^1.5.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "gulp": "^4.0.0",
    "iobroker-react-components": "^1.0.0",
    "jquery": "^3.6.0",
    "jsdom": "^16.5.2",
