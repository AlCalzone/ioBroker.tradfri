  "main": "build/main.js",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.tradfri"
  },
  "scripts": {
    "test_js": "node node_modules/mocha/bin/mocha test/*.js",
    "test_ts": "node node_modules/mocha/bin/mocha --require ts-node/register --require source-map-support/register src/**/*.test.ts",
    "test_package": "node node_modules/mocha/bin/mocha test/testPackageFiles.js",
    "prepublishOnly": "npm run test_package",
    "test": "npm run test_ts && npm run test_js",
    "coverage": "node node_modules/nyc/bin/nyc npm run test_ts",
    "lint": "npm run tslint \"src/**/*.ts\"",
    "tslint": "tslint",
    "deploy_local": "node build/deploy_local.js"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
